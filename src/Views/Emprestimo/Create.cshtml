@model EmprestimosModel
@{
ViewData["Title"] = "Cadastrar Emprestimo";
}
<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastrar Emprestimo</h1>
    </div>

<form method="post" asp-controller="Emprestimo" asp-action="Create">
    <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control text-light" id="Recebedor" placeholder="Quem esta Recebendo o Livro ?" asp-for="Recebedor">
            <span asp-validation-for="Recebedor" class="text-danger"></span>

    </div>
    <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control text-light" id="Fornecedor" placeholder="Quem Esta Fornecendo ?" asp-for="Fornecedor">
            <span asp-validation-for="Fornecedor" class="text-danger text-light" ></span>
        </div>
    <div class="mb-3">
            <label class="form-label text-light" for="Livro">Livro</label>
            <input type="text" class="form-control text-light" id="Livro" placeholder="Qual o Nomde Do Livro" asp-for="Livro">
            <span asp-validation-for="Livro" class="text-danger text-light"></span>
    </div>

    <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Enviar</button>
    <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
</form>
</div>
